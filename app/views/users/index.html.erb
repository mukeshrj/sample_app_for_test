<h1>Listing users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th>Account Info</th>
      <th>My Image Gallary</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to 'Account Info.', "#" %></td>
        <td><%= link_to 'Image Gallary', images_path %></td>
        <td>
          <%= link_to 'Show', user %>
          <%= link_to 'Edit', edit_user_path(user) %>
          <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

